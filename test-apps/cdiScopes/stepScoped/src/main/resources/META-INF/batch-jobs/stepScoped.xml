<job id="stepScoped" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">
    <step id="stepScoped.step1" next="stepScoped.step2">
        <listeners>
            <listener ref="stepScopedListener"/>
        </listeners>
        <batchlet ref="stepScopeBatchlet1"/>
    </step>
    <step id="stepScoped.step2" next="s3">
        <batchlet ref="stepScopeBatchlet2"/>
    </step>
    <step id="s3">
        <batchlet ref="s3">
            <properties>
                <property name="aa" value="#{jobParameters['aap2']}" />
                <!--
                <property name="aa" value="123"/>
                -->
            </properties>
        </batchlet>
 
    </step>
</job>
